<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="512dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_intro_background" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/back" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddEnseignant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="250dp"
        android:text="Ajouter Etudiant"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp">

        <TableLayout
            android:id="@+id/enseignantTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <!-- Table Header -->
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:padding="8dp"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Matiere"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Actions"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue" />
            </TableRow>

            <!-- Table Rows will be added dynamically from code -->

        </TableLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
